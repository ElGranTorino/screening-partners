{
  "compilerOptions": {
    "target": "ES2022",                  
    "module": "ESNext",                                
    "rootDir": "./src",                                 
    "outDir": "./dist",
    "removeComments": false,                        
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
}
